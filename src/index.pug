doctype html
html(lang="ja")
	head
		meta(charset="utf-8")
		title textarea-undo-redo
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet" href="index.css")
		script(type="module" src="index.js")
	body
		.app
			.log
				.item
					.caption
						p Undo
						#undoKey [ctrl]+[z]
					#undo
				.item
					.caption
						p Redo
						#redoKey [ctrl]+[shift]+[z], [ctrl]+[y]
					#redo
			.caption
				p textarea
			textarea#textarea
